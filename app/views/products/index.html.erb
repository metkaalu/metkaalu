<% form_tag store_products_path, :method => 'get' do%>
  <%= text_field_tag :query %>
  <%= submit_tag "Search", :name => nil %>
<%end%>

<h1>Products</h1>

<% @products.each do |product| %>

	<div class="product">
    	<div class="name"><%= product.name %></div>
        <div class="photo">
          <%if product.product_images.exists?%>
            <% for image in product.product_images.limit(1) %>
                <%= image_tag image.image.url, :size =>'125x110' %>

            <%end%>
          <% end %>
          
        </div>
        <div class="price_bg"><div class="price">$<%= product.price %></div></div>
        <%= link_to 'Show', store_product_path(@store,product.id) %>
        <%= link_to 'Edit', edit_store_product_path(@store,product.id) %>
    </div>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.price %></td>
    <td><%= product.category %></td>
    <td><%= link_to('Show', {:action => 'show', :id => product.id, :store_id => @store.id}) %></td>
    <td><%= link_to('Edit', {:action => 'edit', :id => product.id, :store_id => @store.id}) %></td>
    <td><%= link_to('Destroy', {:action => 'destroy', :id => product.id, :store_id => @store.id}, :confirm => 'Are you sure?', :method => :delete) %></td>
  </tr>
<% end %>
</table>

<br />

</div>
<%= link_to 'New Product', new_store_product_path(@store) %> |
<%= link_to 'Back To Store', store_path(@store) %>
