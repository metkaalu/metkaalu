<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.price %></td>
    <td><%= product.category %></td>
    <td><%= link_to('Show', {:action => 'show', :id => product.id, :store_id => @store.id}) %></td>
    <td><%= link_to('Edit', {:action => 'edit', :id => product.id, :store_id => @store.id}) %></td>
    <td><%= link_to('Destroy', {:action => 'edit', :id => product.id, :store_id => @store.id}, :confirm => 'Are you sure?', :method => :delete) %></td>
  </tr>
<% end %>
</table>

