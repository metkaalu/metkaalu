<% form_tag store_products_path, :method => 'get' do%>
  <%= text_field_tag :query %>
  <%= submit_tag "Search", :name => nil %>
<%end%>

<h1>Products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.price %></td>
    <td><%= product.category %></td>
    <td><%= link_to('Show', {:action => 'show', :id => product.id, :store_id => @store.id}) %></td>
    <td><%= link_to('Edit', {:action => 'edit', :id => product.id, :store_id => @store.id}) %></td>
    <td><%= link_to('Destroy', {:action => 'destroy', :id => product.id, :store_id => @store.id}, :confirm => 'Are you sure?', :method => :delete) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_store_product_path(@store) %>
