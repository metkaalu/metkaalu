<p id="notice"><%= notice %></p>
<p><b>Images</b>
<div style="border-style:dashed; ">
   <%if @product.product_images.exists?%>
    <% @product.product_images.each do |foto| %>
      <div>
        <%= image_tag foto.image.url, :size=>'150x150' %>
      </div>
    <%end%>
  <% end %>
  </div>
</p>
<div>
<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>
<b>Categories:</b>
  <ul>
    <% @product.categories.each do |cat|   %>
    <li> <%= cat.name %> </li>
    <%end%>
  </ul>
<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<p>
  <b>Category:</b>
  <%= @product.category %>
</p>
</div>

